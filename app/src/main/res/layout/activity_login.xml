<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/anh"
    tools:context=".View.LoginActivity">

    <LinearLayout
        android:layout_width="400dp"
        android:layout_height="50dp"
        android:gravity="end">

        <TextView
            android:id="@+id/textView"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:ellipsize="end"
            android:maxLines="1"
            android:text="Sign Up"
            android:textColorHint="#000000"
            android:textSize="15dp"
            android:textStyle="bold|italic" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:gravity="center"
        android:orientation="vertical"
        tools:ignore="MissingConstraints">


        <ImageView
            android:id="@+id/retro_sneakers_and_shoes_store_logo_2"
            android:layout_width="150dp"
            android:layout_height="129dp"
            android:layout_marginBottom="15dp"
            android:contentDescription="retro_sneakers_and_shoes_store_logo_2"
            android:src="@drawable/retro_sneakers_and_shoes_store_logo_2"
            tools:ignore="MissingConstraints"
            tools:layout_editor_absoluteX="130dp"
            tools:layout_editor_absoluteY="141dp" />


        <EditText

            android:id="@+id/editTextText"
            android:layout_width="272dp"
            android:layout_height="33dp"
            android:layout_marginBottom="15dp"

            android:drawableLeft="@drawable/vector_ek7"
            android:ems="15"
            android:hint="       UserName"
            android:padding="10dp"
            android:textSize="12dp" />

        <EditText
            android:id="@+id/editTextText2"
            android:layout_width="271dp"
            android:layout_height="32dp"
            android:layout_marginBottom="15dp"
            android:drawableStart="@drawable/icon_lock"
            android:ems="15"
            android:hint="      PassWork"
            android:inputType="textPassword"
            android:padding="10dp"
            android:textSize="12dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:layout_marginRight="33dp"
            android:layout_marginBottom="20dp"
            android:text="Fogotpassword?"
            android:textColor="#000"

            android:textSize="15dp" />

        <TextView
            android:id="@+id/textView10"
            android:layout_width="90dp"
            android:layout_height="30dp"
            android:layout_marginBottom="10dp"
            android:backgroundTint="#FFFFFF"
            android:gravity="center"
            android:text="Login"
            android:textSize="12dp"
            android:textStyle="bold"
            tools:ignore="MissingConstraints"
            tools:layout_editor_absoluteX="74dp"
            tools:layout_editor_absoluteY="451dp" />

        <TextView
            android:id="@+id/textView12"
            android:layout_width="90dp"
            android:layout_height="30dp"
            android:layout_marginBottom="130dp"
            android:gravity="center"
            android:text="Exit"
            android:textSize="12dp"
            android:textStyle="bold"
            tools:ignore="MissingConstraints"
            tools:layout_editor_absoluteX="245dp"
            tools:layout_editor_absoluteY="451dp" />


    </LinearLayout>

</RelativeLayout>